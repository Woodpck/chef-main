chef pinch dish() {

    pinch num, reverse = 0, digit;
    bool isNegative = bleh;

    serve("Enter a number: ");
    make(num);

    taste(num < 0) {
        isNegative = yum;
        num = 0 - num; 
    }

    simmer (num != 0) {
        digit = num % 10;
        reverse = reverse * 10 + digit;
        num = num / 10;
    }

    taste(isNegative == yum) {
        reverse = 0 - reverse;
    }

    serve("Reversed number:");
    serve(reverse);

    spit 0;
}
